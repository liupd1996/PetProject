<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceInfoActivity"
    android:background="@drawable/bk_gradient">

    <include
        android:id="@+id/cl_title_bar"
        layout="@layout/header_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_white_corner_20dp">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            android:layout_marginEnd="20dp"
            android:text="关闭设备"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#d81e06"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close_device"
            app:layout_constraintTop_toTopOf="@id/tv_close"
            app:layout_constraintBottom_toBottomOf="@id/tv_close"
            app:layout_constraintEnd_toStartOf="@+id/tv_close"/>

        <com.example.petproject.customview.CircularImageView
            android:id="@+id/iv_device"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/device_model"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_device"
            android:text="设备名称"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="22dp"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_run_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_device"
            app:layout_constraintStart_toStartOf="@+id/iv_device"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="设备运行时长: "/>

        <TextView
            android:id="@+id/tv_run_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_run_time"
            app:layout_constraintStart_toStartOf="@+id/iv_device"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="当前设备状态: "/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:text="正常"/>

        <Button
            android:id="@+id/btn_unbind"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_gray_corner_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_run_state"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintWidth_percent="0.45"
            android:text="解绑设备" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_red_corner_10dp"
            app:layout_constraintTop_toTopOf="@+id/btn_unbind"
            app:layout_constraintBottom_toBottomOf="@+id/btn_unbind"
            app:layout_constraintStart_toEndOf="@+id/btn_unbind"
            app:layout_constraintWidth_percent="0.45"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="绑定宠物" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>