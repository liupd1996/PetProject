<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/orange_gradient">

    <include
        android:id="@+id/cl_title_bar"
        layout="@layout/header_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title_exercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:text="运动量"
            android:gravity="center"
            android:textColor="@drawable/bar_selector_color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/bar_selector_left"/>

        <TextView
            android:id="@+id/tv_title_cal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="消耗量"
            android:gravity="center"
            android:textColor="@drawable/bar_selector_color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/bar_selector_right"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_bar"
        android:layout_marginTop="40dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_1"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_data"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="正常"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_weight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_bar"
        app:layout_constraintBottom_toTopOf="@+id/cl_list"
        android:layout_marginTop="30dp"
        android:visibility="visible">

        <com.itheima.wheelpicker.WheelPicker
            android:id="@+id/wheelPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_item_text_color="@color/white"
            app:wheel_selected_item_text_color="@color/white"
            app:wheel_item_text_size="30sp"
            app:wheel_item_align="center"
            app:wheel_visible_item_count="3"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_wheel_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/wheelPicker"
            app:layout_constraintTop_toTopOf="@+id/wheelPicker"
            app:layout_constraintBottom_toBottomOf="@id/wheelPicker"
            android:text="kg"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="36sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_white_corner_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:text="更新"
            android:textColor="#EF7D46"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_bar"
        android:background="@drawable/bg_white_corner_20dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tv_seven_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF7D46"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:visibility="visible"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_seven_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_corner_20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/iv_xiaotieshi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/xiaotieshi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小贴士"
            android:textSize="14sp"
            android:textColor="#EF7D46"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/iv_xiaotieshi"
            app:layout_constraintBottom_toBottomOf="@+id/iv_xiaotieshi"
            app:layout_constraintStart_toEndOf="@+id/iv_xiaotieshi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的宠物一切正常!"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_xiaotieshi"
            app:layout_constraintStart_toStartOf="@+id/iv_xiaotieshi"
            android:layout_marginTop="5dp"
            android:textColor="#EF7D46"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>